<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label class="label">RST</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded">
                <input type="text" class="input" id="rst_sent" name="rst_sent" pattern="-?[0-9]{1,3}" size="3" maxlength="3" placeholder="Sent" value="{{qso.rst_sent}}" required />
            </p>
        </div>
        <div class="field">
            <p class="control is-expanded">
                <input type="text" class="input" id="rst_rcvd" name="rst_rcvd" pattern="-?[0-9]{1,3}" size="3" maxlength="3" placeholder="Received" value="{{qso.rst_rcvd}}" required />
            </p>
        </div>
    </div>
</div>
