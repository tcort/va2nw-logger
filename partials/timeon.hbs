<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label class="label">Time On</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded">
                <input class="input" type="date" id="date_on" name="date_on" value="{{qso.date_on}}" required />
            </p>
        </div>
        <div class="field">
            <p class="control is-expanded">
                <input class="input" type="time" id="time_on" name="time_on" step="1" value="{{qso.time_on}}" required />
            </p>
        </div>
        <div class="field">
            <p class="control is-expanded">
                <button type="button" class="button is-light" id="timeon_now">Now</button>
            </p>
        </div>
    </div>
</div>
